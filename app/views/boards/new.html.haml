.container
  %h2 New Board
  = form_with(model: @board, url: 'new_board_path', method: 'post', local: true) do |f|
    %div.field
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div.field
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    %div.actions
      = f.submit 'Submit', class: 'btn-primary'
