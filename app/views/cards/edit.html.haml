.container
  %ul
    - @card.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @card, local: true) do |f|
    %div
      = f.label :eyecatch, 'Eyecatch'
    %div
      = f.file_field :eyecatch
    %div.field
      = f.label :name, 'Name'
    %div
      = f.text_field :name, class: 'text'
    %div.field
      = f.label :description, 'Description'
    %div
      = f.text_area :description
    %div.field
      = f.label :deadline, 'deadline'
    %div
      = f.date_field :deadline, class: 'text'
    %div.actions
      = f.submit '保存', class: 'btn-primary'